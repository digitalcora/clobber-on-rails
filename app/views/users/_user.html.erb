<div class="user">
  <% if current_user?(user) %>
    <span class="blank button">C!</span>
  <% else %>
    <%= link_to 'C!', challenges_path(:challenge => {:target_user_id => user.id}),
      :method => :post, :remote => true, :class => 'inverse button yellow' %>
  <% end %>
  <span class="username"><%= user.username %></span>
  <span class="stats">
    [
    <span class="wins"><%= user.wins %></span>
    /
    <span class="losses"><%= user.losses %></span>
    ]
  </span>
</div>
