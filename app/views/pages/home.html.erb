<% if signed_in? %>
  <div id="sidebar">
    <div id="users_pane" class="pane">
      <h2>Users Online</h2>
      <div id="users" class="scroll">
        <%= render @users %>
      </div>
    </div>
  <%= render :partial => 'challenges/sent',
             :object => @sent_challenge if @sent_challenge %>
  <%= render :partial => 'challenges/incoming',
             :object => @incoming_challenge if @incoming_challenge %>
  </div>
  <div id="lobby" class="pane">
    <%= render 'shared/chat_interface' %>
  </div>
  <script type="text/javascript">
    setTimeout(function(){ $.getScript('/pages/home.js?since=<%= DateTime.now %>') }, 750)
  </script>
<% else %>
  <p>Welcome! You are not signed in. To play,
  <%= link_to 'Sign In', signin_path, :class => 'inverse button blue' %>
  with an existing account or
  <%= link_to 'Sign Up', signup_path, :class => 'inverse button green' %>
  for a new account.</p>
<% end %>
