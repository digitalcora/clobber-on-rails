<header>
  <h1><%= base_title %></h1>
  <nav>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <% if signed_in? %>
	  <li><%= link_to 'Account', edit_user_path(current_user) %></li>
      <% end %>
      <% if signed_in? %>
      <li><%= link_to 'Sign Out', signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to 'Sign In', signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
